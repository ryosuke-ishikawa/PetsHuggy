<%= render 'partial/navbar' %>

<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3 text-center">
      <h2>登録</h2>
      <hr>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render 'partial/deviseErrorMsg' %>
        
        <%= link_to "Sign in with Facebook", user_facebook_omniauth_authorize_path, class: "btn btn-facebook" %>
        <hr>
        <div class="form_group">
          <%= f.label :email %><br />
          <div class="input-group margin-bottom-sm">
          <span class="input-group-addon"><i class="fa fa-envelope-o fa-fw" aria-hidden="true"></i></span>
          <%= f.email_field :email, class: "form-control", placeholder: "email", autofocus: true %>
          </div>
        </div>

        <div class="form_group">
          <%= f.label :パスワード %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %>)文字以上</em>
          <% end %><br />
          <div class="input-group margin-bottom-sm">
          <span class="input-group-addon"><i class= "fa fa-key fa-fw" aria-hidden="true"></i></span>
          <%= f.password_field :password, class: "form-control",placeholder: "パスワード", autocomplete: "off" %>
          </div>
        </div>

        <div class="form_group">
          <%= f.label :パスワードの確認 %><br />
          <div class="input-group margin-bottom-sm">
          <span class="input-group-addon"><i class= "fa fa-key fa-fw" aria-hidden="true"></i></span>
          <%= f.password_field :password_confirmation, class: "form-control", placeholder: "パスワードの確認", autocomplete: "off" %>
          </div>
        </div>
      
        <div class="actions" style="margin-top:5px;">
          <%= f.submit "Sign up" ,class: "btn btn-success" %>
        </div>
      <% end %>
      
      <%= render "devise/shared/links" %>
    </div>  
  </div>
</div>
